<p id="notice"><%= notice %></p>

<h1>Listing Makes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Discription</th>
      <th>Picture Link</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @makes.each do |make| %>
      <tr>
        <td><%= make.name %></td>
        <td><%= make.discription %></td>
        <td><%= make.image %></td>
        <td><%= link_to 'Show', make %></td>
        <td><%= link_to 'Edit', edit_make_path(make) %></td>
        <td><%= link_to 'Destroy', make, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

